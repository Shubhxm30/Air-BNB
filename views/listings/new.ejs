<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2 ">
        <br><br>
    <h3>Create New Listing </h3>
    <br>
    <form method="POST" action="/lists" novalidate class="needs-validation">
    <div class="mb-3">
        <label for="title" class="form-lable">Enter title</label>
    <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" required>
    <div class="valid-feedback">looks good!</div>
    <div class="invalid-feedback">Enter a valid title</div>
    </div>

    <div class="mb-3">
        <label for="description" class="form-lable">Enter Description</label>
    <textarea type="text" name="listing[description]" placeholder="Add your note" class="form-control" required></textarea>
    <div class="valid-feedback">cool!</div>
    <div class="invalid-feedback"> Please Enter a short description</div>
    </div>

    <div class="mb-3">
        <label for="image" class="form-lable">Add Image URL</label>
        <input  name="listing[image]" placeholder="Add your URL/image" class="form-control">
    </div>

    <div class="row">
        <div class="mb-3 col-4">
            <label for="price" class="form-lable">Enter Price</label>
            <input type="number" name="listing[price]" placeholder="ex : 1200" class="form-control" required>
            <div class="valid-feedback">Great price</div>
            <div class="invalid-feedback">Enter a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">Enter Country</label>
            <input type="text" name="listing[country]" placeholder="ex : India" class="form-control" required>
            <div class="invalid-feedback">Enter a valid country name.</div>
        </div>
    </div>

    <div class="mb-3">
        <label for="location" class="form-lable">Enter location</label>
        <input type="text" name="listing[location]" placeholder="ex : Lonavala, Maharashtra" class="form-control" required>
        <div class="invalid-feedback">Enter a valid location</div>
    </div>

    <br>
    <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    <br><br>
    </div>
</div>