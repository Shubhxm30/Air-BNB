<% layout("/layouts/boilerplate") %>
   <div class="row">
      <div class="col-8 offset-3 mt-3">
         <h3>Listing Details </h3>
         </div>
         <div class="card col-6 offset-3 show-card">
            <img src="<%= listings.image %>" class="card-img-top show-img" alt="Listing image">
            <div class="card-body">
               <p class="card-text">
                  <b><%= listings.title %> </b> <br>
                  <%= listings.description %> <br>
                  &#x20B9; <%= listings.price.toLocaleString("en-IN") %> <br>
                  <%= listings.location %> <br>
                  <%= listings.country %>
               </p>
            </div>
         </div>
   </div>
   <br>
<div class="btns">
   <a href="/lists/<%= listings._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
   <form method="POST" action="/lists/<%= listings._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5">Delete</button>
   </form>
</div>